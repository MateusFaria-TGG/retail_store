<h1><%= @department.name %></h1>

<div class="container-fluid">
  <div class="table-responsive">
    <table class="table table-striped table-dark text-center">
      <thead>
      <tr>
        <th>Name</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @products_with_this_department.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.created_at %></td>
          <td><%= product.updated_at %></td>
          <td>
            <div class="ajust-buttons">
              <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-info' %>
              <p class="separator">|</p>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: "Are you sure do you want to remove #{product.name}?" }, class: 'btn btn-danger' %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'Edit', edit_department_path(@department), class: 'btn btn-default' %> |
<%= link_to 'Back', departments_path, class: 'btn btn-default'%>
